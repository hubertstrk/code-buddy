{
  "name": "code-buddy",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "code-buddy": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\"",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\" --"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/yargs": "^17.0.33",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
